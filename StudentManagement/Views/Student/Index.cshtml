@model StudentManagement.Models.ViewModelForFiltering
@using StudentManagement.Models

<h1>Student Results</h1>

<form method="get">
    <label for="filterStatus" class="form-label">Filter by Status:</label>
    <select name="filterStatus" onchange="this.form.submit()" class="form-select mb-3">
        <option value="">All</option>
        @foreach (var status in Enum.GetValues(typeof(Status)))
        {
            <option value="@status" selected="@(status.Equals(Model.FilterStatus))">@status</option>
        }
    </select>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Course Title</th>
            <th>Total Marks</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.CourseTitle</td>
                <td>@item.TotalMarks</td>
                <td>@item.Status</td>
            </tr>
        }
    </tbody>
</table>