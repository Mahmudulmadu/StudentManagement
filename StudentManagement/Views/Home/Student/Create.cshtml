@model StudentManagement.Models.Student

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Student Name</label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Course Title</label>
        <input asp-for="CourseTitle" class="form-control" />
        <span asp-validation-for="CourseTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Total Marks</label>
        <input asp-for="TotalMarks" class="form-control" type="number" min="0" max="100" />
        <span asp-validation-for="TotalMarks" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
